<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.sabrentkaro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.utils.CustomTextView
            android:id="@+id/titleSearchProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#55000000"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            custom:fonttype="trebuchet_ms" />

        <com.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#55000000"
            android:padding="5dp"
            android:text="@string/products_of_your_choice_are_just_a_click_away_"
            android:textColor="@color/white"
            android:textSize="12sp"
            custom:fonttype="trebuchet_ms" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="2dp"
            android:scrollbars="none" />
    </LinearLayout>

</FrameLayout>