<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.sabrentkaro"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutPerDay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.utils.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:gravity="start"
            android:padding="3dp"
            android:text="@string/rent_per_day"
            android:textColor="@color/black"
            android:textSize="14sp"
            custom:fonttype="trebuchet_ms" />

        <EditText
            android:id="@+id/editPricePerDayRent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="@string/eg_in_between_1_the_price_of_purchase"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

