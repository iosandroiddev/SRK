<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.sabrentkaro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#55000000"
                android:padding="5dp" >

                <com.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:padding="3dp"
                    android:text="@string/location_preferences"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    custom:fonttype="trebuchet_ms" />

                <com.utils.CustomTextView
                    android:id="@+id/btnKnowMoreLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="2dp"
                    android:background="@drawable/custom_button_selector"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/know_more"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    custom:fonttype="trebuchet_ms" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <com.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:padding="3dp"
                    android:text="@string/in_my_location"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    custom:fonttype="trebuchet_ms" />

                <com.utils.SlideSwitch
                    android:id="@+id/switchInMyLocation"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|center_vertical"
                    custom:isOpen="false"
                    custom:shape="circle"
                    custom:themeColor="@color/pink" >
                </com.utils.SlideSwitch>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <com.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:padding="3dp"
                    android:text="@string/selected_cities"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    custom:fonttype="trebuchet_ms" />

                <com.utils.SlideSwitch
                    android:id="@+id/switchSelectedCities"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|center_vertical"
                    custom:isOpen="false"
                    custom:shape="circle"
                    custom:themeColor="@color/pink" >
                </com.utils.SlideSwitch>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <com.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:padding="3dp"
                    android:text="@string/anywhere"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    custom:fonttype="trebuchet_ms" />

                <com.utils.SlideSwitch
                    android:id="@+id/switchAnyWhere"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|center_vertical"
                    custom:isOpen="false"
                    custom:shape="circle"
                    custom:themeColor="@color/pink" >
                </com.utils.SlideSwitch>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#55000000"
                android:padding="5dp" >

                <com.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:padding="3dp"
                    android:text="@string/calendar_preferences"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    custom:fonttype="trebuchet_ms" />

                <com.utils.CustomTextView
                    android:id="@+id/btnKnowMoreCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="2dp"
                    android:background="@drawable/custom_button_selector"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/know_more"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    custom:fonttype="trebuchet_ms" />
            </FrameLayout>

            <com.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical|start"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/select_start_date"
                android:textColor="@color/black"
                android:textSize="16sp"
                custom:fonttype="trebuchet_ms" />

            <com.utils.CustomTextView
                android:id="@+id/btnStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button_selector"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/start_date"
                android:textColor="@color/black"
                android:textSize="16sp"
                custom:fonttype="trebuchet_ms" />

            <com.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical|start"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/select_end_date"
                android:textColor="@color/black"
                android:textSize="16sp"
                custom:fonttype="trebuchet_ms" />

            <com.utils.CustomTextView
                android:id="@+id/btnEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/blue_button_selector"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"
                android:singleLine="true"
                android:text="@string/end_date"
                android:textColor="@color/black"
                android:textSize="16sp"
                custom:fonttype="trebuchet_ms" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.utils.CustomTextView
                    android:id="@+id/btnPostMyAd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_custom_button_selector"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/post_my_ad"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    custom:fonttype="trebuchet_ms" />

                <com.utils.CustomTextView
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_custom_button_selector"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    custom:fonttype="trebuchet_ms" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>